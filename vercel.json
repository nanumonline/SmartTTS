{
  "buildCommand": "bash scripts/pre-build.sh && npm run clean:php && npm run build",
  "outputDirectory": "dist",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./",
  "functions": {
    "api/broadcast/index.js": {
      "runtime": "nodejs18.x",
      "includeFiles": "api/broadcast/index.js"
    }
  },
  "rewrites": [
    {
      "source": "/api/broadcast",
      "destination": "/api/broadcast/index.js"
    }
  ],
  "cleanUrls": true
}

